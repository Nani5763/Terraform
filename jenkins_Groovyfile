node {
    stage('git checkout') { 
        git branch: 'main', url: 'https://github.com/Nani5763/Terraform.git'
    }
    stage('init') {
        dir('Day-01-Basic-code-Ec2'){
            sh 'terraform init'
        }
    }
    stage('plan'){
        dir('Day-01-Basic-code-Ec2'){
            sh 'terraform plan'
        }
        
    }
    stage('apply') {
        dir('Day-01-Basic-code-Ec2'){
        sh 'terraform apply -auto-approve'
        }
    }
}
